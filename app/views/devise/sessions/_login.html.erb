  <!-- Modal -->
 <div class="modal fade" id="myModal-login" role="dialog">
    <div class="modal-dialog modal-sm" style="margin-top:120px;">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header header-margin">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body test-font">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


<a href="user_omniauth_authorize_path(:facebook)" class="btn btn-block btn-social btn-facebook">
  <span class="fa fa-facebook facebook-icon"></span>
  Register with Facebook
</a>
<br>
<p style="color: #ccc;">_________________<span> OR </span>________________</p>
<br>
  <div class="form-group email">
    <span class="fa fa-at"></span>
    <%= f.email_field :email, autofocus: true, class: 'form-control login_field_height', placeholder: 'Email' %>
  </div>

  <div class="form-group password">
    <span class="fa fa-lock"></span>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control login_field_height', placeholder: 'Password' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group" style="margin-top:40px;">
      <label class="checkbox-inline">
      <%= f.check_box :remember_me %>
      <b>Stay Logged in ?</label>
      <%= link_to "Forgot password ?", popups_password_path, remote:"true", style: "float:right; color:#FF4500;" %></b>
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit "Sign in", class: "btn_login" %>
  </div>
<% end %>
<br><br><br>
        </div>
        <div class="modal-footer">
        <p class="login-footer">
         New Registration ? 
         <%= link_to "Register", popups_signup_path, remote:"true", style:"color:#FF4500;",
         :type => :reset, "data-dismiss" => "modal", "aria-hidden" => "true" %>
        </p>
        </div>
      </div>
      </div>
      
    </div>
  </div>